# Extra settings for Ponscripter.

GAME = higu
FINAL_TARGET = $(if $(WIN32),cigales.exe,cigales$(EXESUFFIX))
RESOURCES = resources/$(GAME).png =icon.png
RCFILE = $(GAME).rc
RCDEPS = $(addprefix resources/$(GAME),.ico)

.PHONY: final
final: ponscr$(EXESUFFIX)
	-strip $<
	-upx --best $<
	$(RM) $(FINAL_TARGET)
	mv $< $(FINAL_TARGET)
