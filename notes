top_xy (pixels?)             -> origin_xy (pixels, pixels)
num_xy (characters)          -> area_xy   (pixels, lines)
xy     (characters, lines*2) -> pos_xy    (pixels, lines)
pitch_xy (pixels)            -> avsz_xy   (pixels) - em width and line height

pixels x() -> pixels GetX()
pixels y() -> pixels GetY()
setXY(characters) -> SetXY(characters)

isEndOfLine(characters)          ->  isNoRoomFor(pixels)
advanceCharInHankaku(characters) ->  advanceBy(pixels)