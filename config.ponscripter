# Extra settings for Ponscripter.

ifdef NARCISSU2
GAME = narci2
FINAL_TARGET = $(if $(WIN32),Narcissu2.exe,narcissu2$(EXESUFFIX))
PSCFLAGS := $(PSCFLAGS) -D 'DEFAULT_WM_TITLE="Narcissu Side 2nd"'
NARCI = true
RESOURCES = $(GAME).png =icon.png
RCFILE = $(GAME).rc
RCDEPS = $(GAME).gdf $(GAME)-boxart.png $(GAME).ico

.PHONY: final
final: ponscr$(EXESUFFIX)
	-strip $<
	-upx --best $<
	$(RM) $(FINAL_TARGET)
	mv $< $(FINAL_TARGET)
endif
